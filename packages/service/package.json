{
  "name": "@rehearsal/service",
  "version": "2.2.0",
  "description": "Rehearsal Service",
  "keywords": [
    "rehearsal",
    "service",
    "ast",
    "transforms",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rehearsal-js/rehearsal-js.git"
  },
  "license": "BSD-2-Clause",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "lint": "npm-run-all lint:*",
    "lint:tsc-src": "tsc --noEmit",
    "lint:tsc-test": "tsc --noEmit --project test/tsconfig.json",
    "test": "vitest --run --config ./vitest.config.ts",
    "test:watch": "vitest --coverage --watch",
    "version": "pnpm version"
  },
  "dependencies": {
    "@glint/core": "^1.1.0",
    "@rehearsal/utils": "workspace:*",
    "find-up": "^6.3.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-uri": "^3.0.7"
  },
  "devDependencies": {
    "@rehearsal/reporter": "workspace:*",
    "@vitest/coverage-v8": "^0.34.3",
    "type-fest": "^3.8.0",
    "vitest": "^0.34.3",
    "winston": "^3.8.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "packageManager": "pnpm@8.6.7",
  "engines": {
    "node": ">=14.16.0"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
