{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "checkJs": true,
    "paths": {
      "my-addon": ["node_modules/test-addon"],
      "my-addon/*": ["node_modules/test-addon/*"]
    }
  },
  "glint": {
    "environment": [
      // "ember-loose",// Removing ember-loose because it doesn't work with our GlintCodeFix due to bad transformed source files.
      "ember-template-imports",
      "glimmerx"
    ],
    "checkStandaloneTemplates": true
  }
}
