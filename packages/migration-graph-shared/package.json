{
  "name": "@rehearsal/migration-graph-shared",
  "version": "3.0.0-beta",
  "description": "Tool for generating a typescript migration graph",
  "license": "BSD-2-Clause",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./*": "./*"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "lint": "npm-run-all lint:*",
    "lint:tsc-src": "tsc --noEmit",
    "lint:tsc-test": "tsc --noEmit --project test/tsconfig.json",
    "test": "vitest --run --config ./vitest.config.ts --coverage",
    "version": "pnpm version"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "dependency-cruiser": "^12.11.1",
    "fast-glob": "^3.2.12",
    "findup-sync": "^5.0.0",
    "fs-extra": "^11.1.1",
    "micromatch": "^4.0.5",
    "prettier": "^2.8.7",
    "sort-package-json": "^2.4.1",
    "type-fest": "^3.8.0"
  },
  "devDependencies": {
    "@rehearsal/test-support": "workspace:*",
    "@vitest/coverage-c8": "^0.30.1",
    "fixturify": "^3.0.0",
    "fixturify-project": "^5.2.0",
    "tmp": "^0.2.1",
    "vitest": "^0.30.0"
  },
  "peerDependencies": {
    "typescript": "^5.0"
  },
  "packageManager": "pnpm@8.2.0",
  "volta": {
    "extends": "../../package.json"
  }
}
