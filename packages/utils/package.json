{
  "name": "@rehearsal/utils",
  "version": "3.0.0-beta",
  "description": "Rehearsal Utils",
  "keywords": [
    "rehearsal",
    "ast",
    "ast traversal",
    "transforms",
    "tsc utility",
    "tsc utils",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rehearsal-js/rehearsal-js.git"
  },
  "license": "BSD-2-Clause",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./*": "./*"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "lint": "npm-run-all lint:*",
    "lint:tsc-src": "tsc --noEmit",
    "lint:tsc-test": "tsc --noEmit --project test/tsconfig.json",
    "test": "vitest --run --config ./vitest.config.ts --coverage",
    "test:slow": "vitest --run",
    "test:watch": "vitest --coverage --watch",
    "version": "pnpm version"
  },
  "dependencies": {
    "@rehearsal/ts-utils": "workspace:*",
    "chalk": "^5.2.0",
    "commander": "^10.0.0",
    "compare-versions": "6.0.0-rc.1",
    "debug": "^4.3.4",
    "execa": "^7.1.1",
    "fast-glob": "^3.2.12",
    "findup-sync": "^5.0.0",
    "fs-extra": "^11.1.1",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "micromatch": "^4.0.5",
    "semver": "^7.3.8",
    "simple-git": "^3.17.0",
    "type-fest": "^3.8.0",
    "which": "^3.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/which": "^3.0.0",
    "@vitest/coverage-c8": "^0.30.1",
    "fixturify": "^3.0.0",
    "tmp": "^0.2.1",
    "vitest": "^0.30.0"
  },
  "peerDependencies": {
    "typescript": "^5.0"
  },
  "packageManager": "pnpm@8.2.0",
  "engines": {
    "node": ">=14.16.0"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
