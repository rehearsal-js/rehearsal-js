{
  "extension": ["ts"],
  "watch-files": ["test/**/*.test.ts"],
  "recursive": true,
  "forbid-only": true,
  "reporter": "spec",
  "timeout": 60000,
  "file": ["test/setup.ts"],
  "ignore": [
    "test/fixtures/**/*",
    "test/ts-migrate/**/*",
    "test/setup.ts",
    "test/test-helpers.ts"
  ],
  "node-option": [
    "experimental-specifier-resolution=node",
    "loader=ts-node/esm"
  ]
}
