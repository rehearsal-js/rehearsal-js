{
  "name": "@rehearsal/cli",
  "version": "0.0.30",
  "description": "Rehearsal CLI",
  "repository": {
    "type": "git",
    "url": "https://github.com/rehearsal-js/rehearsal-js.git"
  },
  "license": "BSD-2-Clause",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "rehearsal": "./bin/rehearsal.js"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "yarn tsc -b",
    "docs": "yarn api-extractor run --typescript-compiler-folder ./node_modules/typescript && yarn api-documenter markdown -i ./temp -o ./docs",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "yarn eslint --fix . --ext .ts",
    "lint:tsc-src": "yarn tsc --noEmit",
    "prepare": "yarn build",
    "test": "yarn && vitest --run",
    "test:watch": "vitest --coverage --watch",
    "dev:clean": "rm test/fixtures/app/.rehearsal.json && git restore test/fixtures/app/foo test/fixtures/app/foo_2 package.json ../../yarn.lock"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@microsoft/api-documenter": "^7.13.68",
    "@rehearsal/migrate": "^0.0.30",
    "@rehearsal/reporter": "^0.0.30",
    "@rehearsal/upgrade": "^0.0.30",
    "compare-versions": "^5.0.1",
    "debug": "^4.3.2",
    "dependency-cruiser": "^11.15.0",
    "execa": "^5.1.1",
    "findup-sync": "^5.0.0",
    "fs-extra": "^10.0.0",
    "glob": "^8.0.3",
    "json5": "^2.2.0",
    "listr2": "^5.0.1",
    "semver": "^7.3.5",
    "simple-git": "^3.10.0",
    "tmp": "^0.2.1",
    "toposort": "^2.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.2",
    "@microsoft/api-documenter": "^7.13.68",
    "@microsoft/api-extractor": "^7.18.19",
    "@types/debug": "^4.1.7",
    "@types/findup-sync": "^4.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.0.0",
    "@types/json5": "*",
    "@types/node": "^18.0.3",
    "@types/semver": "^7.3.9",
    "@types/tmp": "^0.2.0",
    "@types/toposort": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.36.1",
    "commander": "^9.4.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.4.0",
    "typescript": "4.7.4",
    "vitest": "^0.22.1"
  },
  "engines": {
    "node": ">=14.16.0"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
