{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "composite": true,
    "declaration": true,

    "paths": {
      "*": ["types/*"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "newLine": "LF",
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "es2017",
    "esModuleInterop": true
  },
  "include": ["foo", "foo_2"]
}
