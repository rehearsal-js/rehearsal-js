{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "es2020",
    "moduleResolution": "node",
    "newLine": "lf",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es2020",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true
  }
}
