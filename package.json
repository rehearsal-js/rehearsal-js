{
  "name": "rehearsal-workspace",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "lerna run lint --stream",
    "prepare": "lerna run prepare --stream",
    "test": "lerna run test",
    "prepack": "lerna run prepack --stream",
    "changelog": "yarn conventional-changelog -i CHANGELOG.md -s",
    "clean": "find . -name 'node_modules' -o -name 'dist' -o -name 'coverage' -type d -prune -exec rm -rf '{}' +",
    "reset": "yarn clean && yarn install"
  },
  "dependencies": {
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.2",
    "@microsoft/api-documenter": "^7.13.68",
    "@microsoft/api-extractor": "^7.18.19",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "@vitest/coverage-c8": "^0.22.1",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.1",
    "lerna": "^5.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.7.1",
    "typescript": "4.7.4",
    "vitest": "^0.22.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rehearsal-js/rehearsal-js.git"
  },
  "volta": {
    "node": "16.17.0",
    "yarn": "1.22.19"
  }
}
